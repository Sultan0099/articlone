{
  "name": "articlone",
  "version": "1.0.0",
  "description": "Article Writing Application with service of API sharing",
  "main": "index.js",
  "scripts": {
    "start": "SET NODE_ENV=production & node ./dist/index.js",
    "build": "tsc",
    "server": "SET NODE_ENV=development & ts-node-dev  --transpileOnly  ./src/index.ts  ",
    "test": "SET NODE_ENV=test & ts-node-dev  --transpileOnly -r dotenv/config  ./src/index.ts",
    "test-dist": "SET NODE_ENV=test &  node -r dotenv/config ./dist/index.js",
    "prod": "SET NODE_ENV=production & node ./dist/index.js",
    "watch": "tsc -w",
    "cms-service": "npm run dev --prefix ./service-cms",
    "client": "npm start --prefix ./client",
    "both": "concurrently \"npm run server\"  \"npm run client\" ",
    "all": "concurrently \"npm run server\" \"npm run cms-service\" \"npm run client\" "
  },
  "author": "Sultan Ali",
  "license": "ISC",
